{
  "$schema": "https://opencode.ai/config.json",
  "model": "vllm-local/nvidia/Qwen3-Next-80B-A3B-Instruct-NVFP4",
  "provider": {
    "vllm-local": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "vLLM Local",
      "options": {
        "baseURL": "http://localhost:8356/v1",
        "apiKey": "sk-dummy"
      },
      "models": {
        "nvidia/Qwen3-Next-80B-A3B-Instruct-NVFP4": {
          "name": "Qwen3 80B Local (Opencode)",
          "limit": {
            "context": 32768,
            "output": 16384
          }
        }
      }
    }
  },
  "agent": {
    "defaults": {
      "model": "vllm-local/nvidia/Qwen3-Next-80B-A3B-Instruct-NVFP4",
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      }
    }
  }
}
